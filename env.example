# Supabase Configuration (Required for core functionality)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# App Configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fride

# Voice Signaling Server
NEXT_PUBLIC_SIGNALING_SERVER_URL=ws://localhost:3001
SIGNALING_SERVER_PORT=3001

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Feature Flags (All enabled by default)
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_TICKETS=true
NEXT_PUBLIC_ENABLE_ADMIN=true

# Production URLs (Optional - will use localhost if not set)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ICE Servers for WebRTC (Optional - will use defaults if not set)
NEXT_PUBLIC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
NEXT_PUBLIC_TURN_SERVERS=

# CORS Configuration (Optional)
CORS_ORIGIN=http://localhost:3000

# Development/Deployment Flags
NODE_ENV=development
VERCEL_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development

# Build Configuration
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00Z
NEXT_PUBLIC_VERSION=1.0.0

# Analytics and Monitoring (Optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# File Upload Configuration (Optional)
NEXT_PUBLIC_UPLOAD_URL=
UPLOAD_API_KEY=

# Third Party Services (Optional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
NEXT_PUBLIC_GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
