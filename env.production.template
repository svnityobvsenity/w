# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-actual-service-role-key

# App Configuration
NEXTAUTH_SECRET=your-actual-nextauth-secret-32-chars-minimum
NEXTAUTH_URL=https://your-vercel-domain.vercel.app

# Database (if using external database)
DATABASE_URL=postgresql://username:password@your-db-host:5432/fride

# Voice Signaling Server (Update after Railway deployment)
NEXT_PUBLIC_SIGNALING_SERVER_URL=wss://your-signaling-server.railway.app
SIGNALING_SERVER_PORT=3001

# Redis (Optional - for caching)
REDIS_URL=redis://your-redis-host:6379

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_TICKETS=true
NEXT_PUBLIC_ENABLE_ADMIN=true

# Production URLs (Update with your actual Vercel domain)
NEXT_PUBLIC_APP_URL=https://your-vercel-domain.vercel.app
NEXT_PUBLIC_API_URL=https://your-vercel-domain.vercel.app/api

# ICE Servers for WebRTC
NEXT_PUBLIC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
NEXT_PUBLIC_TURN_SERVERS=your-turn-server-url

# CORS Configuration
CORS_ORIGIN=https://your-vercel-domain.vercel.app
